{
  "name": "test-financial-number",
  "version": "0.0.0-semantic-release",
  "description": "Do math with money! Without risking loss of data to floating point representations!",
  "main": "index.js",
  "module": "index.mjs",
  "scripts": {
    "test": "tape test/*.js | faucet && jsmd readme.md",
    "build": "rollup -c",
    "lint": "eslint '*.js' --fix",
    "coverage": "nyc npm run test",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/praveshtora/financial-number.git"
  },
  "keywords": [
    "financial",
    "arithmetic",
    "math",
    "money",
    "number",
    "bigint",
    "bignumber"
  ],
  "author": "TehShrike",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/praveshtora/financial-number/issues"
  },
  "homepage": "https://github.com/praveshtora/financial-number#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@semantic-release/npm": "^5.1.15",
    "eslint": "7.28.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-promise": "^4.2.1",
    "faucet": "0.0.1",
    "husky": "^3.0.7",
    "jsmd": "0.3.1",
    "lint-staged": "^9.4.0",
    "nyc": "^14.1.1",
    "rollup": "^1.12.3",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "semantic-release": "^15.13.24",
    "tape": "4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "nyc": {
    "all": false,
    "check-coverage": true,
    "excludeNodeModules": true,
    "branches": 80,
    "lines": 80,
    "functions": 80,
    "statements": 80
  },
  "release": {
    "branch": "master",
    "analyzeCommits": {
        "preset": "angular",
        "releaseRules": [
            {
                "type": "docs",
                "release":"patch"
            },
            {
                "type": "refactor",
                "release":"minor"
            },
            {
                "type":"style",
                "release": "patch"
            }
        ]
    },
    "tagFormat": "${version}"
  },
  "dependencies": {
    "financial-arithmetic-functions": "~1.1.1"
  }
}
